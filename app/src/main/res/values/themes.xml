<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MCRiderKit" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Background color of the splash screen -->
        <item name="windowSplashScreenBackground">#FFFFFF</item> <!-- Your App Blue -->

        <!-- The icon in the center (Use your app logo) -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_app_logo</item>

        <!-- Theme to switch to after the splash screen is gone -->
        <item name="postSplashScreenTheme">@style/Theme.MCRiderKit</item>
    </style>

</resources>